@model HMSNew.Areas.Dashboard.ViewModel.RolesListingModel
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Roles</h2>
        <hr />
    </div>
</div>
<div class="row mb-3">
    <div class="col-lg-12">
        <form>
            <div class="input-group">


                <input type="text" name="searchterm" class="form-control" placeholder="Search" value="@Model.SearchTerm">
                @if (Model.Roles!=null && Model.Roles.Count()>0)
                {
                    @*<select name="RoleId" class="form-control">
                        <option value="0">
                            --Select Role--
                        </option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role." @(role.Id == Model.RoleId? "selected":string.Empty)>
                                @role.Name
                            </option>
                        }
                    </select>*@
                }
                <div class="input-group-append">
                    <button  class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i>Search</button>
                    <a href="@Url.Action("Index", "Roles")" class="btn btn-outline-secondary" type="button"><i class="fas fa-redo-alt mr-1"></i>Reset</a>
                    <button data-href="@Url.Action("Action", "Roles")" class="data-btn btn btn-outline-success" type="button" data-toggle="modal" data-target="#actionModal"><i class="fas fa-plus-square mr-1"></i>Create</button>

                </div>
            </div>
        </form>
    </div>
        
    </div>

<div class="row">
    <div class="col-lg-12">
        @{Html.RenderPartial("_Listing", Model); }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">

    </div>
</div>


<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });
</script>