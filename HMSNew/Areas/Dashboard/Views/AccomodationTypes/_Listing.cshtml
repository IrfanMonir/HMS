@model HMSNew.Areas.Dashboard.ViewModel.AccomodationTypeListingModel
@if (Model != null && Model.AccomodationTypes!=null && Model.AccomodationTypes.Count()>0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var accomodationtype in Model.AccomodationTypes)
            {
                <tr>
                    <td>@accomodationtype.Name</td>
                    <td>@accomodationtype.Description</td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationTypes",new {ID=accomodationtype.Id })" type="button" class="data-btn btn btn-primary"data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationTypes",new {ID=accomodationtype.Id })" type="button" class="data-btn btn btn-danger"data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else
	{
<div class="alert alert-danger" role="alert">
    Sorry! NO records exist.
</div>
	}
